<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">
    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:background="@drawable/ic_estelogo_vec"
        android:id="@+id/logo"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Регистрация"
        android:textColor="@color/white"
        android:background="@drawable/for_button"
        android:id="@+id/simple_reg" />
    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/simple_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Регистрация продавца"
        android:textColor="@color/white"
        android:background="@drawable/for_button"
        android:id="@+id/seller_reg"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/seller_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/for_button"
        android:text="Мой аккаунт"
        android:textColor="@color/white"
        android:id="@+id/my_acc"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Что такое Este?"
        android:textColor="@color/white"
        android:id="@+id/about"/>



</RelativeLayout>